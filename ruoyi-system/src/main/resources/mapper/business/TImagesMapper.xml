<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.business.mapper.TImagesMapper">

    <resultMap type="TImages" id="TImagesResult">
        <result property="id"    column="id"    />
        <result property="fromId"    column="from_id"    />
        <result property="fromType"    column="from_type"    />
        <result property="name"    column="name"    />
        <result property="url"    column="url"    />
        <result property="width"    column="width"    />
        <result property="height"    column="height"    />
        <result property="size"    column="size"    />
        <result property="mime"    column="mime"    />
        <result property="suffix"    column="suffix"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectTImagesVo">
        select id, from_id, from_type,name, url, width, height, size, mime, suffix, remark
        from t_images
    </sql>

    <select id="selectTImagesList" resultMap="TImagesResult">
        <include refid="selectTImagesVo"/>
        where from_id = #{fromId} and from_type = #{fromType}
    </select>
    <select id="selectTImagesMap" resultMap="TImagesResult">
        <include refid="selectTImagesVo"/>
        where from_id = #{fromId} and from_type = #{fromType}
        limit 1
    </select>

    <insert id="insertTImages" parameterType="TImages" useGeneratedKeys="true" keyProperty="id">
        insert into t_images
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="fromId != null">from_id,</if>
            <if test="fromType != null">from_type,</if>
            <if test="name != null">`name`,</if>
            <if test="url != null">url,</if>
            <if test="width != null">width,</if>
            <if test="height != null">height,</if>
            <if test="size != null">`size`,</if>
            <if test="mime != null">mime,</if>
            <if test="suffix != null">suffix,</if>
            <if test="remark != null">remark,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="fromId != null">#{fromId},</if>
            <if test="fromType != null">#{fromType},</if>
            <if test="name != null">#{name},</if>
            <if test="url != null">#{url},</if>
            <if test="width != null">#{width},</if>
            <if test="height != null">#{height},</if>
            <if test="size != null">#{size},</if>
            <if test="mime != null">#{mime},</if>
            <if test="suffix != null">#{suffix},</if>
            <if test="remark != null">#{remark},</if>
        </trim>
    </insert>

    <delete id="deleteTImagesById">
        delete from t_images where from_id = #{fromId} and from_type = #{fromType}
    </delete>
</mapper>